<div class="content has-text-centered">
    <section>
        <h2>Create a New Post!</h2>
    
        <form class="new-post-form">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="post-title" class="form-control email" name="post-title" />
            </div>
            <div>
                <label for="post-body">Post Body</label>
                <input type="text" id="post-body" class="form-control post-body" name="post-body" />
            </div>
            <button type="submit" class="login button">Create</button>
        </form>
    </section>
</div>
{{#if posts.length}}
<div class="container">
    <section>
        <h2>Your Posts</h2>
        <ol>
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
        </ol>
    </section>
</div>
{{/if}}
<script src="/javascript/create-post.js"></script>